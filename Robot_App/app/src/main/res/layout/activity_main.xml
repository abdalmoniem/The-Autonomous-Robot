<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:id="@+id/up_btn"
        android:onClick="move_robot"
        android:background="@drawable/up_button"
        android:layout_marginTop="60pt"
        android:layout_alignRight="@+id/stp_btn"
        android:layout_alignEnd="@+id/stp_btn" />

    <Button
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:id="@+id/lft_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="move_robot"
        android:background="@drawable/left_button"
        android:layout_marginLeft="10pt"/>

    <Button
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:id="@+id/rght_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="move_robot"
        android:background="@drawable/right_button"
        android:layout_marginRight="10pt"/>

    <Button
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:id="@+id/dwn_btn"
        android:onClick="move_robot"
        android:background="@drawable/down_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/stp_btn"
        android:layout_alignEnd="@+id/stp_btn"
        android:layout_marginBottom="60pt" />

    <Button
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:id="@+id/stp_btn"
        android:layout_alignTop="@+id/lft_btn"
        android:layout_centerHorizontal="true"
        android:onClick="move_robot"
        android:background="@drawable/stop_button"/>
</RelativeLayout>
